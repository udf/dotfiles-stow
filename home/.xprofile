#!/bin/zsh

xset -b

export TERMINAL="termite"
export HOST="$(hostname)"
export PATH="$HOME/scripts:$PATH"
export QT_QPA_PLATFORMTHEME="qt5ct"
export GTK_THEME=Arc-Dark
export LC_ALL=en_ZA.UTF-8

xrdb ~/.Xresources
# xbanish &

dbus-update-activation-environment --systemd DBUS_SESSION_BUS_ADDRESS DISPLAY XAUTHORITY

case "$(hostname)" in
"karen-chan")
    export PIPEWIRE_LATENCY=1024/48000
    export GDK_SCALE=1
    export MOZ_USE_XINPUT2=1
    export MPD_HOST=B7WtKLYaAw7wVf4p@$HOME/.config/mpd/socket

    xset s off 
    xset -dpms

    xrandr --auto

    # gnome keyring
    eval $(/usr/bin/gnome-keyring-daemon --start --components=pkcs11,secrets,ssh)
    export SSH_AUTH_SOCK

    numlockx on
    nm-applet &
    dunst &
    xmousepasteblock &
    xrandr --output DisplayPort-0 --primary --mode 2560x1440 -r 165 --pos 3840x250 --output HDMI-A-0 --mode 3840x2160 --pos 0x0
    ;;
"alice")
    xset dpms 300 300 300
    xset s 300
    numlockx on
    random-lockscreen.sh &
    ;;
esac

