[module/memory]
type = internal/memory
interval = 5
format = %{+u}<ramp-used><label>
label =   %percentage_used:2%%
ramp-used-0 = ${env:URAMP_0}
ramp-used-1 = ${env:URAMP_1}
ramp-used-2 = ${env:URAMP_2}
ramp-used-3 = ${env:URAMP_3}
ramp-used-4 = ${env:URAMP_4}
ramp-used-5 = ${env:URAMP_5}
ramp-used-6 = ${env:URAMP_6}
ramp-used-7 = ${env:URAMP_7}


[module/filesystem]
type = internal/fs
interval = 10
mount-0 = /
fixed-values = true
label-mounted =   %free%
format-mounted-underline = ${colors.white}


[module/volume]
type = internal/pulseaudio
label-volume = %percentage%%
format-volume = <ramp-volume> <label-volume>
format-volume-underline = ${colors.bwhite}
label-muted = 󰝟  0%
label-muted-underline = ${colors.bred}
ramp-volume-0 = " "
ramp-volume-1 = " "
ramp-volume-2 = " "
ramp-volume-3 = " "
ramp-volume-4 = " "
ramp-volume-5 = " "

[module/volume-karen-chan]
inherit = module/volume
sink = alsa_output.pci-0000_0f_00.4.pro-output-0

[module/date]
type = internal/date
interval = 1
date = " %a %b %d"
time = "%T "
format-prefix-foreground = ${colors.foreground}
format-underline = ${colors.bwhite}
label = %date% %time%
