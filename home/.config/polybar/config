[colors]
background = ${xrdb:background}
foreground = ${xrdb:foreground}
black = ${xrdb:color8}
red = ${xrdb:color9}
green = ${xrdb:color10}
yellow = ${xrdb:color11}
blue = ${xrdb:color12}
magenta = ${xrdb:color13}
cyan = ${xrdb:color14}
white = ${xrdb:color15}
bblack = ${xrdb:color0}
bred = ${xrdb:color1}
bgreen = ${xrdb:color2}
byellow = ${xrdb:color3}
bblue = ${xrdb:color4}
bmagenta = ${xrdb:color5}
bcyan = ${xrdb:color6}
bwhite = ${xrdb:color7}


[global/wm]
margin-top = 0
margin-bottom = 0


[bar/alice]
inherit = main_bar

line-size = 1

padding-left = 2
padding-right = 2

modules-left = i3 musicinfo_samlap
modules-center = volume date
modules-right = downspeed upspeed downspeed_wlan upspeed_wlan cpu memory filesystem battery


[bar/karen-chan_1]
inherit = main_bar
bottom = true
monitor = HDMI-A-0

line-size = 2

padding-left = 5
padding-right = 105

modules-left = musicinfo i3 xwindow
modules-center = date volume-karen-chan
modules-right = downspeed upspeed filesystem upsinfo memory cpu deadline

tray-detached = true


[bar/karen-chan_2]
inherit = main_bar
bottom = false
monitor = DisplayPort-1
monitor-fallback = DisplayPort-0

line-size = 2

padding-left = 2
padding-right = 2

modules-left = i3 xwindow
modules-right = musicinfo_samlap downspeed upspeed filesystem upsinfo memory cpu volume-karen-chan date


[main_bar]
width = 100%
height = 20
fixed-center = true

background = ${colors.background}
foreground = ${colors.foreground}

line-color = #f00

module-margin-left = 0
module-margin-right = 1

font-0 = Hack Nerd Font:pixelsize=9;0
font-1 = Noto Sans Mono CJK JP:pixelsize=9;0
font-2 = Noto Sans Mono CJK KR:pixelsize=9;0
font-3 = Noto Sans Mono CJK SC:pixelsize=9;0
font-4 = Noto Sans Mono CJK TC:pixelsize=9;0
font-5 = Hack Nerd Font:pixelsize=12;5
font-6 = DejaVu Mono:pixelsize=10;0

tray-position = right
tray-padding = 5
tray-maxsize = 18
tray-detached = false
tray-background = ${colors.background}

wm-restack = i3


[module/musicinfo]
type = custom/script
exec = ~/.config/polybar/playerctlctl_status.sh 120
label = %{u#00000000}%{+u}%output%
format = <label>
tail = true


[module/musicinfo_samlap]
inherit = module/musicinfo
exec = ~/.config/polybar/playerctlctl_status.sh 90


[module/battery_rem]
type = custom/script
exec = ~/.config/polybar/acpi_remaining.sh
label = %output%
format = <label>
tail = true


[module/upsinfo]
type = custom/script
exec = ~/.config/polybar/ups.py
label = %output%
format = <label>
tail = true


[module/deadline]
type = custom/script
exec = ~/scripts/deadline.py
label = %output%
format = %{+u}%{u#f0de74}<label>
tail = true


[module/battery]
type = internal/battery
battery = BAT0
adapter = ACAD
poll-interval = 5

label-full =  %{-u}
label-full-foreground = ${colors.bgreen}
label-full-underline = ${colors.bgreen}

format-charging = %{+u}<ramp-capacity>%{F-}<animation-charging>  <label-charging>
label-charging = %percentage%% +%consumption%W %time%
animation-charging-0 =  
animation-charging-1 =  
animation-charging-2 =  
animation-charging-3 =  
animation-charging-4 =  
animation-charging-5 = 
animation-charging-framerate = 1000

format-discharging = %{+u}<ramp-capacity>%{F-}  <label-discharging>
label-discharging = %percentage%% %consumption%W %time%
ramp-capacity-0 = ${env:FURAMP_7}
ramp-capacity-1 = ${env:FURAMP_7}
ramp-capacity-2 = ${env:FURAMP_7}
ramp-capacity-3 = ${env:FURAMP_6}
ramp-capacity-4 = ${env:FURAMP_5}
ramp-capacity-5 = ${env:FURAMP_4}
ramp-capacity-6 = ${env:FURAMP_3}
ramp-capacity-7 = ${env:FURAMP_2}
ramp-capacity-8 = ${env:FURAMP_1}
ramp-capacity-9 = ${env:FURAMP_0}


[module/i3]
type = internal/i3
format = <label-state><label-mode>
index-sort = true
wrapping-scroll = true
pin-workspaces = false
strip-wsnumbers = true

label-mode-foreground = ${colors.blue}
label-mode-background = ${colors.background}

label-focused = " %name% "
label-focused-background = ${colors.foreground}
label-focused-foreground = ${colors.background}
label-focused-padding = 0

label-unfocused = " %name% "
label-unfocused-background = ${colors.background}
label-unfocused-foreground = ${colors.foreground}
label-unfocused-padding = 0

label-urgent = " %name% "
label-urgent-background = ${colors.red}
label-urgent-foreground = ${colors.foreground}
label-urgent-padding = 0

label-visible = " %name% "
label-visible-background = ${colors.bblue}
label-visible-foreground = ${colors.background}
label-visible-padding = 0


[module/xwindow]
type = internal/xwindow
label = %title:0:100:...%
label-padding = 1


[module/downspeed]
type = internal/network
interface = net0
interval = 1
label-connected =  %downspeed:8%
format-connected-underline = ${colors.green}


[module/upspeed]
type = internal/network
interface = net0
interval = 1
label-connected =  %upspeed:8%
format-connected-underline = ${colors.green}


[module/downspeed_wlan]
type = internal/network
interface = waifu1
interval = 1
label-connected =  %downspeed:8%
